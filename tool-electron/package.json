{
  "name": "toolbox",
  "version": "0.0.8",
  "description": "乡下来的工具箱",
  "main": "dist/main/index.js",
  "author": "乡下来的喵",
  "scripts": {
    "dev": "node -r ts-node/register src/script/build-main --env=development --watch",
    "build": "node -r ts-node/register src/script/build-main --env=production",
    "build:dir": "node -r ts-node/register src/script/build-main --env=production && electron-builder --dir"
  },
  "license": "SEE LICENSE IN <LICENSE>",
  "repository": "github:xxldm/tool",
  "homepage": "https://xxldm.github.io/tool",
  "build": {
    "appId": "xxldm_toolbox",
    "directories": {
      "output": "release"
    },
    "files": [
      "!node_modules",
      "dist/**"
    ],
    "extraResources": {
      "from": "src/public",
      "to": "app/src/public"
    },
    "win": {
      "icon": "src/public/favicon.ico",
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/dotenv-flow": "^3.2.0",
    "@types/minimist": "^1.2.2",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "chalk": "^4.1.2",
    "dotenv-flow": "^3.2.0",
    "electron": "^16.0.6",
    "electron-builder": "^22.14.5",
    "electron-store": "^8.0.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "minimist": "^1.2.5",
    "ora": "^5.4.1",
    "prettier": "2.5.1",
    "rollup": "^2.63.0",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4"
  },
  "packageManager": "yarn@3.1.1",
  "dependencies": {
    "electron-log": "^4.4.4",
    "electron-updater": "^4.6.1"
  }
}
