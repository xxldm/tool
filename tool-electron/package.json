{
  "name": "toolbox",
  "version": "0.0.1",
  "description": "乡下来的工具箱",
  "main": "dist/main/index.js",
  "author": "乡下来的喵",
  "scripts": {
    "dev": "node -r ts-node/register src/script/build-main --env=development --watch",
    "build": "node -r ts-node/register src/script/build-main --env=production",
    "build:dir": "node -r ts-node/register src/script/build-main --env=production && electron-builder --dir",
    "build:dev": "node -r ts-node/register src/script/build-main --env=production && electron-builder"
  },
  "engines": {
    "node": ">=9.3.0"
  },
  "license": "SEE LICENSE IN <LICENSE>",
  "repository": "github:xxldm/tool",
  "homepage": "https://xxldm.github.io/tool",
  "build": {
    "appId": "xxldm.toolbox",
    "generateUpdatesFilesForAllChannels": true,
    "publish": [
      {
        "provider": "github"
      }
    ],
    "directories": {
      "output": "release"
    },
    "files": [
      "!node_modules",
      "dist/**"
    ],
    "win": {
      "icon": "favicon.png",
      "artifactName": "${productName}-v${version}.${ext}",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/dotenv-flow": "^3.2.0",
    "@types/minimist": "^1.2.2",
    "@types/node": "^17.0.17",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "chalk": "^4.1.2",
    "electron": "^17.0.0",
    "electron-builder": "^22.14.13",
    "electron-store": "^8.0.1",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "minimist": "^1.2.5",
    "ora": "^5.4.1",
    "prettier": "2.5.1",
    "rollup": "^2.67.2",
    "ts-node": "^10.5.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5"
  },
  "packageManager": "yarn@3.1.1",
  "dependencies": {
    "electron-log": "^4.4.6",
    "electron-updater": "^4.6.5"
  }
}
